root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{qmd,md}]
max_line_length = 80

[*.{yml,yaml}]
indent_size = 2

[*.scss]
indent_size = 2

[*.R]
indent_size = 2